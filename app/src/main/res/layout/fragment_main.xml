<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/app_bar"
        android:id="@+id/app_bar"/>

    <Button
        android:id="@+id/found_button"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/app_bar"
        android:text="@string/found_dog"
        android:elevation="2dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        style="@style/Widget.AppCompat.Button.Colored"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/found_button"
        android:layout_marginTop="20dp"
        android:padding="16dp">

        <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/map"
                android:layout_gravity="bottom|right|end"
                android:src="@drawable/ic_action_add"/>

       </com.google.android.gms.maps.MapView>

        <RelativeLayout
            android:id="@+id/led_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/map"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/led_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/led"
                android:textSize="16sp"
                android:layout_centerVertical="true"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/led_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/led_text"
                android:layout_marginLeft="10dp"/>

        </RelativeLayout>

        <Button
            android:id="@+id/fb_post_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@+id/led_layout"
            android:text="@string/fb"
            android:elevation="2dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            style="@style/Widget.AppCompat.Button.Colored"/>

    </RelativeLayout>

</RelativeLayout>


